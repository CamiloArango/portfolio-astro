---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Explore the digital craftsmanship of a passionate full-stack developer on this portfolio site. From Colombia to Panama, discover projects that blend React, NextJS, Astro, and Python for innovative, efficient web solutions. Dive into a world where code meets creativity." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
		<div class="flex flex-col min-h-screen">
			<div class="flex-grow">
				<Header
					email="camiloarangoe@protonmail.com"
					tabs={[
						{ name: "Home", href: "/" },
						{ name: "Photos", href: "https://photos.camiloarangoe.co" },
					]}
				/>
				<slot />
			</div>
			<Footer />
		</div>
  </body>
</html>

<style is:global>
  body {
    background-color: black;
  }

	@media (min-width: 768px) {
		body {
			margin-top: 3rem;
			margin-bottom: 3rem;
		}
	}
  
	@font-face {
		font-family: "Geist-UltraLight";
		src: url("/fonts/Geist-UltraLight.woff2") format("woff2");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

  @font-face {
		font-family: "Geist-Medium";
		src: url("/fonts/Geist-Medium.woff2") format("woff2");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

  @font-face {
		font-family: "Geist-Regular";
		src: url("/fonts/Geist-Regular.woff2") format("woff2");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

  @font-face {
		font-family: "Geist-Black";
		src: url("/fonts/Geist-Black.woff2") format("woff2");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

  @font-face {
		font-family: "Geist-Bold";
		src: url("/fonts/Geist-Bold.woff2") format("woff2");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
</style>
