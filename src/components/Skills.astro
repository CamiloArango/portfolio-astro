---
interface Props {
  technologies: string[];
}

const { technologies } = Astro.props;
---

<section class="m-8 text-slate-300 text-sm">
  <ul class="grid grid-cols-3 gap-3 text-center">
    {technologies.map((technology) => (
      <li class="border-2 border-purple-300 rounded-xl p-1">{technology}</li>
    ))}
  </ul>
</section>

<style>
  li {
    font-family: "Geist-Ultralight";
  }
</style>

