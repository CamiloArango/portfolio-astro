---
import { Icon } from "astro-icon/components";

interface Props {
	href: string;
	subtitle: string;
	info: string;
	technologies: string[];
	class?: string;
}

const {href, subtitle, info, technologies, class: className } = Astro.props;
---

<article class=`mx-8 ${className}`>
	<a href={href}>
		<h3>{subtitle}</h3>
	</a>
		<div class="text-slate-500">
			<p>{info}</p>
			<ul class="flex flex-row gap-2 my-1">
				{
					technologies.map((technology) => (
						<li>
							<Icon name={technology} class="text-slate-300 text-xl" />
						</li>
					))
				}
			</ul>
		</div>
</article>

<style>
	h3 {
		font-family: "Geist-Regular", sans-serif;
	}
</style>
